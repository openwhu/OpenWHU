module pwm
(
	CLK, RSTn, AddDuty_In, SubDuty_In, AddPeriod_In, SubPeriod_In,
	Cnt2_Display, Count_Display, Digitron_Out, DigitronCS_Out, PWM_LED_Out, PWM_EPI_Out
);
	 input CLK;
	 input RSTn;	//SW0
	 input AddDuty_In;  //KEY3
	 input SubDuty_In;	//KEY2
	 input AddPeriod_In;		//KEY1
	 input SubPeriod_In;		//KEY0
	 input Cnt2_Display;		//SW1
	 input Count_Display;	//SW2
	 
	 output [7:0]Digitron_Out; 
	 output [5:0]DigitronCS_Out;
	 output PWM_LED_Out;	//LED0
	 output PWM_EPI_Out;	//A6
	 
	   assign PWM_EPI_Out = PWM_LED_Out;
		
	 wire [7:0]Duty; 
	 wire [23:0]Count;
	 wire [23:0]Cnt2;
	 
	Duty_Period_Adjust_module U1
	(
		.CLK( CLK ) ,	
		.RSTn( RSTn ) ,	
		.AddDuty_In( AddDuty_In ) ,	
		.SubDuty_In( SubDuty_In ) ,	
		.AddPeriod_In( AddPeriod_In ) ,	
		.SubPeriod_In( SubPeriod_In ) ,	
		.Duty_Out( Duty ) ,	
		.Count_Out( Count ) 
	);
	
	PWM_Generate_module U2
	(
		.CLK( CLK ) ,	
		.RSTn( RSTn ) ,	
		.Duty_In( Duty ) ,	
		.Count_In( Count ) ,
		.PWM_Out( PWM_LED_Out ),
		.Cnt2_Out( Cnt2 ) 	
	);
	
	Digitron_NumDisplay_module U3
	(
		.CLK( CLK ) ,	
		.RSTn( RSTn ) ,
		.Cnt2_Display( Cnt2_Display ) ,
		.Count_Display( Count_Display ) ,
		.Cnt2_In( Cnt2 ) ,	
		.Count_In( Count ) ,
		.Duty_In( Duty ) ,
		.Digitron_Out( Digitron_Out ) ,	
		.DigitronCS_Out( DigitronCS_Out ) 	
	);	
	 
endmodule